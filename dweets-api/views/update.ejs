<%- include('partials/header'); -%>
    <form action="./update" method="POST">        
        <div class="group">
            <label for="author">Author/Editor</label>
            <input name="author" type="text" placeholder="<%- data.posted_by -%>" required/>
        </div>
        <div class="group">
            <label for="dweet">Update Dweet</label>
            <textarea name="dweet" type="text" placeholder="<%- data.dweet -%>" maxlength="140" required></textarea>
        </div>
        <div class="group">
            <input type="submit" value="Update"/>
        </div>
    </form>
<%- include('partials/footer'); -%>